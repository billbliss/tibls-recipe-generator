# Port to run the server locally
PORT=3000

# OpenAI API key for recipe analysis
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub credentials to update a target Gist
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GIST_PATH=https://gist.github.com/USERNAME/
GIST_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Cloud Vision credentials for OCR (used in PDF/image processing)
# This must point to a base64-encoded credentials file
GOOGLE_CLOUD_CREDENTIALS_BASE64_FILE=../config/credentials.base64

# Optional: Enable test mode for development
GENERATE_TEST_DATA=false

# Default image format for recipe images
# Options: 'url' (default) or 'base64'
DEFAULT_IMAGE_FORMAT=url